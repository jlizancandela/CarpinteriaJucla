---
import Formulario from "../components/formulario.astro";
---

<section class="contacto">
  <div class="img_container">
    <img
      src="https://ik.imagekit.io/jlc84/Jucla/email.png?tr=w-600"
      alt="Chica enviando un email"
      class="vector"
    />
  </div>
  <div class="form_container"><Formulario /></div>
</section>

<style>
  .contacto {
    display: flex;
    flex-direction: column;
    margin-bottom: 100px;
    padding-inline: 20px;
  }
  .vector {
    width: 100%;
  }

  .img_container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
  }
  img {
    margin-inline: auto;
    width: 150px0;
  }
  .form_container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
  }
  @media screen and (min-width: 1400px) {
    .contacto {
      flex-direction: row;
      padding-inline: 0;
    }
    .form_container {
      width: 50%;
    }
    .img_container {
      width: 50%;
    }
    .vector {
      width: 700px;
    }
  }
</style>

---
interface Props {
  img: { src: string; alt: string };
  title: string;
  txt: string;
  button: string;
  href: string;
}
const { img, title, txt, button, href } = Astro.props;
---

<article>
  <section class="texto">
    <header>
      <h1>{title}</h1>
    </header>
    <p>
      {txt}
    </p>
    <a href={href}>
      <span>{button}</span><span
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-arrow-right"
          viewBox="0 0 16 16"
        >
          <path
            fill-rule="evenodd"
            d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"
          ></path></svg
        ></span
      >
    </a>
  </section>
  <section class="portada">
    <img src={img.src} alt={img.alt} />
  </section>
</article>

<style>
  article {
    display: flex;
    flex-direction: column-reverse;
    height: 700px;
    box-shadow: 0 0 20px #0000002d;

    &:hover {
      transform: scale(1.02);
      transition: 100ms ease-in-out;
    }
  }

  .texto {
    background-color: white;
    font-size: 20px;
    padding: 20px;
    border-top: 0.1px solid #00000040;
    height: 50%;
    justify-content: space-between;
    display: flex;
    flex-direction: column;
    /* border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px; */

    & a {
      color: black;
      text-decoration: none;
      width: 200px;
      height: 50px;
      margin-right: auto;
      padding: 20px;
      gap: 30px;
      background-color: white;
      border: 1px solid black;
      border-radius: 50px;
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      font-size: medium;
      &:hover {
        background-color: black;
        color: white;
        cursor: pointer;
        font-weight: bold;
      }
    }
  }

  .portada {
    width: 100%;
    height: 50%;
    & img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      /*  border-top-left-radius: 20px;
      border-top-right-radius: 20px; */
    }
  }

  @media screen and (min-width: 800px) {
    article {
      width: 400px;
      height: auto;
    }
  }
</style>

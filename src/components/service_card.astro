---
const { data } = Astro.props;

const { header, h1, body, img, alt } = data;
---

<article>
  <header>{header}</header>
  <section>
    <div>
      <h1>{h1}</h1>
      <p>{body}</p>
    </div>

    <img src={img} alt={alt} />
  </section>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
  }

  header {
    font-size: calc(1em + 1vw);
    font-weight: bold;
    padding: 50px;
  }

  section {
    display: flex;
    flex-direction: column-reverse;

    img {
      width: 100%;
      height: 70vh;
      object-fit: cover;
    }

    div {
      h1 {
        font-size: 25px;
        font-weight: bold;
      }
      text-align: justify;
      display: flex;
      flex-direction: column;
      width: 100%;
      padding: 5vw;
      font-size: calc(1em + 1vw);
      gap: 10px;
      background-color: gainsboro;
    }
  }

  @media screen and (width >= 1200px) {
    header {
      padding: 50px 200px;
    }

    section {
      flex-direction: row;

      div {
        font-size: 2vw;
        width: 50%;
        padding: 8vw;
        place-content: center;
      }

      img {
        width: 50%;
      }
    }
  }
</style>
